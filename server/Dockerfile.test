# ---- Build stage: install deps ----
FROM node:20-alpine3.20 AS deps
WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev && npm cache clean --force

# ---- Final stage: only libvips for sharp (test-prompt.js) ----
FROM node:20-alpine3.20
RUN apk update && apk upgrade --no-cache && apk add --no-cache vips-dev && rm -rf /var/cache/apk/*

WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY package*.json ./
COPY test-prompt.js ./

CMD ["node", "test-prompt.js"]