FROM node:20-alpine

# Install build tools and canvas dependencies
RUN apk add --no-cache \
    build-base \
    libcairo \
    libcairo-dev \
    libjpeg-turbo-dev \
    pango-dev \
    giflib-dev \
    cairo-dev \
    && apk add --no-cache --virtual .gyp \
    python3 \
    make \
    g++

WORKDIR /app

COPY package*.json ./

RUN npm install --production

COPY . .

CMD ["node", "workers/AIProcessor.js"]
